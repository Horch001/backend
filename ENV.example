# MongoDB 数据库连接地址
MONGO_URI=mongodb://127.0.0.1:27017/pi_market

# 后端服务器端口号
PORT=4000

# JWT 令牌签名密钥（用于用户身份验证）
JWT_SECRET=dev_secret_change_me

# 允许跨域访问的前端地址（逗号分隔多个地址）
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# 积分与 π 币的兑换比例（1 π = 多少积分）
POINTS_PER_PI=1

# 平台交易手续费百分比（10% = 10）
FEE_PERCENT=10

# 卖家需要缴纳的押金数量（π 币）
SELLER_DEPOSIT_PI=1000

# 是否启用模拟支付（true=模拟支付，false=真实支付）
MOCK_PAY=true

# 管理后台登录用户名
ADMIN_USERNAME=admin

# 管理后台登录密码
ADMIN_PASSWORD=admin123

# Pi 支付 API 密钥（用于真实支付时验证）
PI_API_KEY=your_pi_api_key_here

# Pi 沙盒模式（true=测试环境，false=生产环境）
PI_SANDBOX=true

# 节点环境（development=开发环境，production=生产环境）
NODE_ENV=development

# 日志级别（debug, info, warn, error）
LOG_LEVEL=info

# 数据库连接池大小
DB_POOL_SIZE=10

# 会话超时时间（毫秒）
SESSION_TIMEOUT=86400000

# 文件上传大小限制（字节）
MAX_FILE_SIZE=5242880


